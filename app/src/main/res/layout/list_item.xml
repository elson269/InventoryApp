<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/photo_view_item"
        android:layout_width="150dp"
        android:layout_height="200dp" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/list_item_product_name"
            style="@style/ListItemStyle"
            tools:text="@string/product_name" />

        <TextView
            android:id="@+id/list_item_product_price"
            style="@style/ListItemStyle"
            tools:text="@string/product_price" />

        <TextView
            android:id="@+id/list_item_product_quantity"
            style="@style/ListItemStyle"
            tools:text="@string/product_current_quantity" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

      <Button
          android:id="@+id/tracker_button"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:focusable="false"
          android:text="tracker"
          android:minHeight="0dp"
          android:minWidth="0dp"
          android:layout_centerVertical="true"/>
    </RelativeLayout>

</LinearLayout>